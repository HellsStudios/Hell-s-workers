		  "type": "line",
		  "left":  { "char":"Berit", "pose":"angry",   "dim": false },
		  "right": { "char":"Sally", "pose":"happy",   "dim": true  },
		  "speaker": "Berit",
		  "text": "Как же ты достал! Ты нам всю клиентуру распугаешь!",
		  "sfx": "res://Audio/sfx/dialog_punch.ogg",
		  "next": "p2"
		},
		"p2": {
		  "type": "line",
		  "left":  { "char":"Berit", "pose":"angry",   "dim": true  },
		  "right": { "char":"Sally", "pose":"annoyed", "dim": false },
		  "speaker": "Sally",
		  "text": "Подумаешь, парочку детишек бутылкой напугал... Коктейль Молотова в первый раз видят?",
		  "next": "c1"
		},
		"c1": {
		  "type": "choice",
		  "prompt": "Как ответить Салли?",
		  "options": [
			{ "text": "Ладно, перегнул. Извини.",
			  "goto": "end_good",
			  "effects": { "mood": {"Sally": 5} }
			},
			{ "text": "Да расслабься ты.",
			  "goto": "p3",
			  "effects": { "mood": {"Sally": -5} }
			}
		  ]
		},
		"p3": {
		  "type": "line",
		  "left":  { "char":"Berit", "pose":"angry",   "dim": true  },
		  "right": { "char":"Sally", "pose":"annoyed", "dim": false },
		  "speaker": "Sally",
		  "text": "А может лучше ты?!",
		  "next": "end_battle"
		},
		"end_good": {
		  "type": "end",
		  "effects": {
			"spawn_tasks": [ { "def":"deliver_box_berit", "kind":"quest" } ]
		  }
		},
		"end_battle": {
		  "type": "end",
		  "effects": {
			"battle": { "enemies": ["Yezt"], "exit_Scene": "res://Scenes/timeline.tscn" },
			"add_condition": { "Berit": ["injury"] },
			"give_quests": ["q_blackmail", "q_cook_intro"]
		  }
		}
	  }
	},
	{
	  "id": "d_end_of_day_1",
	  "bg": "res://Assets/bg/warehouse_evening.png",
	  "start": "p1",
